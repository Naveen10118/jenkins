pipeline {
    agent {
        node {
            label 'docker-agent-python'
        }
    }
        stages {
            stage('Build') {
                steps { 
                    echo "Building.."
                    sh '''
                    cd myapp
                    pip install -r requirements.txt
                    '''
                }
            }
            stage('Test') {
                steps { 
                    echo "Testing.."
                    sh '''
                    cd myapp
                    python3 hello.py
                    python3 hello.py --name=Naveen
                    '''
                }
            }
            stage('Deliver') {
                steps { 
                    echo "Delivering.."
                    sh '''
                    echo "doing deliver stuff..."
                    ''' 
                }
            }
        }
        
        post { 
            success { 
                echo 'Pipeline executed successfully!' 
            } 
            failure { 
                echo 'Pipeline execution failed!' 
        }
    }
    
}
