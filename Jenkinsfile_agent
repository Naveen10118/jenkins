pipeline {
    agent {
        node {
            label 'docker'
        }
    }
        stages {
            stage('Check Node') {
                steps {
                    echo "Checking docker node.."
                    sh 'docker --version'
                    sh 'echo "Running on $(hostname)"'
                }
            }
            stage('Build') {
                steps { 
                    echo "Building.."
                    sh '''
                    sudo apt -y install pip
                    cd myapp
                    pip install -r requirements.txt
                    '''
                }
            }
            stage('Test') {
                steps { 
                    echo "Testing.."
                    sh '''
                    pip --version
                    cd myapp
                    python3 hello.py
                    python3 hello.py --name=Naveen
                    '''
                }
            }
            stage('Deliver') {
                steps { 
                    echo "Delivering.."
                    sh '''
                    echo "doing deliver stuff..."
                    ''' 
                }
            }
        }
        
        post { 
            success { 
                echo 'Pipeline executed successfully!' 
            } 
            failure { 
                echo 'Pipeline execution failed!' 
        }
    }
    
}
